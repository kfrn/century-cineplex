<div class="container">

  <h1 class='title'>This month at the <span class="cc-title">Century Cineplex</span> ...</h1>

  <p class="howabout">How about: <span class="feature-word">{{title}}</span>?</p>

  <div class="filminfo-wrapper">
    <div class="singlefilminfo">
      <table>
        <tr>
          <td class="film-parameter"><strong>Country:</strong></td>
          <td>{{countries}}</td>
        </tr>
        {{#if director}}
          <tr>
            <td class="film-parameter"><strong>Director(s):</strong></td>
            <td>{{director}}</td>
          </tr>
        {{/if}}
        {{#if writers}}
        <tr>
          <td class="film-parameter"><strong>Writer(s):</strong></td>
          <td>{{writers}}</td>
        </tr>
        {{/if}}
        {{#if actors}}
          <tr>
            <td class="film-parameter"><strong>Actors:</strong></td>
            <td>{{actors}}</td>
          </tr>
        {{/if}}
        <tr>
          <td class="film-parameter"><strong>Genre(s):</strong></td>
          <td>{{genres}}</td>
        </tr>
        {{#if runtime}}
          <tr>
            <td class="film-parameter"><strong>Runtime:</strong></td>
            <td>{{runtime}} minutes</td>
          </tr>
        {{/if}}
        {{#if plot}}
          <tr>
            <td class="film-parameter"><strong>Plot summary:</strong></td>
            <td>{{plot}}</td>
          </tr>
        {{/if}}
      </table>
    </div>
    <div class="poster">
      {{#if posterURL}}
        <img src={{posterURL}} alt="Film poster for {{title}}" class="film-poster"/>
      {{else}}
        <img src="../images/noposter02_text2.png" alt="Decayed film frames - no poster available" class="noposter" />
      {{/if}}
    </div>
  </div>

  <p>
    <a href="/">home</a> | <a href="/search">search page</a>
  </p>
</div>
